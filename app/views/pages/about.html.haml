      = t('about.p2')
    %h3
      = t('about.p3header')
    %p
      = t('about.p3')
    %h3
      = t('about.p4header')
    %p
      = t('about.p4')
    %h3
      = t('about.p5header')
    %p
      = t('about.p5.first').html_safe
    %p
      = t('about.p5.second').html_safe
